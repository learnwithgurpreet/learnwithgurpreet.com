<header>
  <h1>{{ title }}</h1>
</header>

{% set firstPost = collections.posts | head(1) %}
{% set recentPost = collections.posts | head(-1) %}

<ul class="stats">
  <li>First Post: <a href="{{ firstPost[0].url }}">{{ firstPost[0].data.title }}</a></li>
  <li>Recent Post: <a href="{{ recentPost[0].url }}">{{ recentPost[0].data.title }}</a></li>
</ul>

<h2>Posts per year</h2>
<canvas id="posts_per_year_chart"></canvas>
<h2>All tags</h2>
<ul class="tags">
  {% for tag in collections.tagList %}
    {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
    {% set postCount = collections.posts | postByTag(tag) | length %}
    <li>
      <a href="{{ tagUrl | url }}">#{{ tag }}<span>x{{ postCount }}</span></a>
    </li>
  {% endfor %}
</ul>