---
layout: layouts/page.njk
pagination:
  reverse: true
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: false
eleventyComputed:
  title: Tagged "{{ tag }}"
permalink: /tag/{{ tag | slug }}/
excerpt: List of posts tagged under "{{ tag }}"
---
<div class="back-link">
  <a href="/tags/">&larr; All Tags</a>
</div>
<section class="article --no-border">
  <h1>Tagged "{{ tag }}"</h1>
  {% for post in collections[ tag ] | reverse %}
    {% include "components/post_card.njk" %}
  {% endfor %}
</section>
