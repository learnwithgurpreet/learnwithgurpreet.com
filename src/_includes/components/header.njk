<header data-has-dark-bg="{% if textColor === 'light' %}true{% endif %}" class="main-header fixed top-0 left-0 right-0 overflow-visible transition-[height,background-color] duration-300 ease-out flex {% if textColor === 'light' %} text-white {% endif %}">
  <nav class="flex items-center justify-between px-6 py-4 relative transition-all lg:max-w-7xl mx-auto w-full">
      <a href="#" class="group">
        <span class="sr-only">Learn with Gurpreet</span>
        <img 
          class="h-10 group-hover:scale-110 group-hover:rotate-180 duration-300 transition-all {% if textColor === 'light' %} invert{% endif %}"
          src="/assets/images/logo.svg"
          alt="Learn with Gurpreet home"
          width="40"
          height="40"
          priority
        />
      </a>

      <button aria-label="Menu" id="menu-toggle" class="sm:hidden">
          <svg width="21" height="15" viewBox="0 0 21 15" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="21" height="1.5" rx=".75" fill="#426287"/>
            <rect x="8" y="6" width="13" height="1.5" rx=".75" fill="#426287"/>
            <rect x="6" y="13" width="15" height="1.5" rx=".75" fill="#426287"/>
          </svg>
      </button>

      <div id="mobile-menu" class="hidden absolute top-[60px] left-0 w-full bg-gray-50 shadow-md py-4 flex-col items-start gap-2 px-5 text-sm md:hidden">
        {% set globalNav = metadata.globalNav %}
        {% for nav in globalNav %}
        <a href="{{ nav.url }}">
            {{ nav.name }}
        </a>
        {% endfor %}
      </div>

      <div class="hidden sm:flex items-center gap-8">
          {% set globalNav = metadata.globalNav %}
          {% for nav in globalNav %}
              <a href="{{ nav.url }}">
              {{ nav.name }}
              </a>
          {% endfor %}
      </div>
  </nav>
</header>