<article class="rounded-lg shadow-lg overflow-hidden bg-white shadow-gray-300">
  <div class="max-w-max inline">
    <img
      class="w-full object-cover h-44"
      src="/assets/images/featured.jpg"
      alt="Learn with Gurpreet home"
      width="352"
      height="180"
      priority
    />
  </div>
  <div class="py-4 pb-6 px-6">
    <h2 class="text-base pb-0">
      <a
        href="{{ post.url }}"
        class="no-underline font-semibold text-blue-700 hover:text-blue-800 transition-colors duration-200"
      >
        {{ post.data.title }}
      </a>
    </h2>
    <time class="text-sm font-semibold text-gray-600 pt-1 pb-0" datetime="{{ post.date | htmlDateString }}">
      {{ post.date | readableDate }}
    </time>
    <p class="line-clamp-5 text-sm pt-2 pb-0">{{ post.data.description }}</p>
  </div>
</article>