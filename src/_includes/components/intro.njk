<section class="mx-auto pt-40 pb-20 px-6 {% if hasBackground === 'true' %}bg-[linear-gradient(to_right,#00a0f8,#052675),url('https://brave.com/static-assets/images/filler.png')] bg-blend-overlay{% endif %}">
  <div class="mx-auto container max-w-5xl {% if textColor === 'light' %} text-white {% endif %}">
    <p class="text-sm uppercase pb-2 text-center font-bold tracking-wide">
      {{ subHeading }}
    </p>
    <h1 class="text-3xl md:text-5xl font-semibold text-center tracking-wide">
      {{ heading }}
    </h1>
    <p class="pt-2 text-center tracking-wide">
      {{ tagLine }}
    </p>
  </div>
</section>